import os 
os.system("cls")

from dataclasses import dataclass

@dataclass
class Pessoas:
    Nome: str 
    Idade: int
    Peso: float
    Altura: float
    
    def Dadosp(self):
        print(f"Seu Nome é: {self.Nome}")
        print(f"Sua Idade é: {self.Idade}")
        print(f"Seu peso é: {self.Peso} Kg")
        print(F"Sua Altura é: {self.Altura} Metros \n ")
        
    
    
    
    
lista_pessoas= []

for i in range(4):
    Usuarios = Pessoas(Nome=input("Informe o seu Nome: "),
                       Idade=input("Infomre a sua Idade: "),
                       Peso=input("Informe o seu Peso: "),
                       Altura=input("Informe a sua Altura: "))
    lista_pessoas.append(Usuarios)
    os.system("cls")
for Pessoas in lista_pessoas:
    Pessoas.Dadosp()
    
