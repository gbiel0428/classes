import os 


from dataclasses import dataclass

@dataclass

class Pessoa:
    Nome: str 
    E_mail: str
    Endereco: str 
    
    
    def dados_entrega(self):
        print(f"Nome: {self.Nome}")
        print(f"Email: {self.E_mail}")
        print(f"Endereço: {self.Endereco}") 
        
    def Dados_email(self):
        print(f"Seu Nome é: {self.Nome}")
        print(f"Seu Endereço é: {self.Endereco}")
        print(f"Seu email é: {self.E_mail}")
    def Nomes(self):
        print(F"Seu Nome é: {self.Nome}")
       
              
    
    
Pessoa1 =Pessoa(Nome=input("Digite seu nome: \n"),
                    E_mail= str(input("Digite seu E-mail: \n")),
                    Endereco= str(input("Digite seu Endereço: \n")))

Pessoa2 = Pessoa(Nome=input("Digite seu nome: \n"),
                    E_mail= str(input("Digite seu E-mail: \n")),
                    Endereco= str(input("Digite seu Endereço: \n")))

print("\n")

print("""Exibindo Dados de entrega\n""")
Pessoa1.dados_entrega()
print("\n")
Pessoa2.dados_entrega()
print("\n")
print(""""Exibindo Dados de email\n""")
Pessoa1.Dados_email()
print("\n")
Pessoa2.Dados_email()
print("\n")
print("""Exibindo Nomes \n""")
Pessoa1.Nomes()
Pessoa2.Nomes()
